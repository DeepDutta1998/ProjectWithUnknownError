<%- include('layouts/header') %>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

<%- include('layouts/sidebar') %>
     

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

<%- include('layouts/topnav') %>
                

                <!-- Begin Page Content -->
                <div class="container">

                  <!-- Outer Row -->
                  <div class="row justify-content-center">
          
                      <div class="col-xl-10 col-lg-12 col-md-9">
          
                          <div class="card o-hidden border-0 shadow-lg my-5">
                              <div class="card-body p-0">
                                  <!-- Nested Row within Card Body -->
                                  <div class="row">
                                      <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                                      <div class="col-lg-6">
                                          <div class="p-5">
                                              <div class="text-center">
                                                  <h1 class="h4 text-gray-900 mb-2">EDIT USER DETAILS</h1>
                                              </div>
                                              <form
                                          class="user"
                                          action="/admin/admin-add-user-update"
                                          method="post"
                                          enctype="multipart/form-data"
                                        >
                                          <div class="form-group">
                                            <input
                                              type="text"
                                              class="form-control form-control-user"
                                              id="firstName"
                                              aria-describedby="emailHelp"
                                              name="firstName"
                                              value="<%=response.firstName%>"
                                              placeholder="Enter First Name..."
                                              
                                              required
                                            />
                                          </div>
                      
                                          <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                            id="lastName" aria-describedby="emailHelp" name="lastName"
                                            value="<%=response.lastName%>"
                                            placeholder="Enter Last Name..." 
                                          </div>
                                          <div class="form-group">
                                            <hr>
                                            <label for="role">Select Role:</label>
                                            <select name="role" id="role" >
                                              <option value="Admin"<%=response.role==="Admin"?'selected':''%>>Admin</option>
                                              <option value="User"<%=response.role==="User"?'selected':''%>>User</option>
                                            </select>
                                          </div>
                                          <div class="form-group">
                                            <input
                                              type="email"
                                              class="form-control form-control-user"
                                              id="email"
                                              aria-describedby="emailHelp"
                                              name="email"
                                              placeholder="Enter Email Address..."
                                              value="<%=response.email%>"
                                            />
                                          </div>
                                          <div class="form-group">
                                            <input type="file" name="image" />
                                          </div>
                                          <input type="hidden" name="id" value="<%= response._id%>">
                                          <button class="btn btn-primary btn-user btn-block">
                                            UPDATE</button>
                                        </form>
                                              <hr>
                                              <div class="text-center">
                                                  <a class="small" href="/admin/admin-table">Go to Admin Table</a>
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
          
                      </div>
          
                  </div>
          
              </div>
            <!-- End of Main Content -->


            <%- include('layouts/siteFooter') %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


<%- include('layouts/footer') %>

    