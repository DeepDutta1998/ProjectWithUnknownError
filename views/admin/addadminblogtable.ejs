<%- include('layouts/header') %>

<body id="page-top">
  <%if(message.length >0) {%>
    <h3 style="text-align: center;color: chartreuse;">
    <%=message? message:''%></h3>
    <%}%>
    <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include('layouts/sidebar') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
   
      <!-- Main Content -->


        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div
            class="d-sm-flex align-items-center justify-content-between mb-4"
          >
            <h1 class="h3 mb-0 text-gray-800">BLog List</h1>
          </div>

          <!-- Content Row -->
          <div class="row">
          
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Blogs</h6>
                </div>
                <div>
                    <a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-blog">Add Content</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                            <thead>
                                <tr>
                                  
                                    <th>Title</th>
                                    <th>Publication Date</th>
                                    <th>Writer</th>
                                    <th>Content Image</th>
                                    <th>Content</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                                 <tbody>
                                  <%element.map((num)=>{%>
                                  <tr>
                                    <td><%=num.titles%></td>
                                    <td><%=num.dates%></td>
                                    <td><%=num.writers%></td>
                                    <td><img src="/uploads/admin/<%=num.images%>" alt="image" width="8%" class="rounded-circle"></td>
                                    <td><%=num.contents%></td>
                                    <td><a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-user-edit/<%=num._id%>">Edit</td>
                                     <td><a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-user-delete/<%=num._id%>">Delete</td>
                                </tr>
                                <%})%>
                              </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layouts/siteFooter') %>
            <!-- Content Row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </div>
</body>

<%- include('layouts/footer') %>
