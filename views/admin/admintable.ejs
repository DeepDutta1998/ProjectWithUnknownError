<%- include('layouts/header') %>

<body id="page-top">
  <%if(message.length >0) {%>
    <h3 style="text-align: center;color: chartreuse;">
    <%=message? message:''%></h3>
    <%}%>
    <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include('layouts/sidebar') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
     

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <div
            class="d-sm-flex align-items-center justify-content-between mb-4"
          >
            <h1 class="h3 mb-0 text-gray-800">ADMIN TABLE PAGE</h1>
          </div>

          <!-- Content Row -->
          <div class="row">
          
            <div class="card shadow mb-4">
                
                <div>
                    <a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-user-page">ADD USER</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Role</th>
                                    <th>Email</th>
                                    <th>Image</th>
                                    <th colspan="2">Action</th>
                                </tr>
                            </thead>
                                 <tbody>
                                  <%element.map((num)=>{%>
                                  <tr>
                                    <td><%=num.firstName%></td>
                                    <td><%=num.lastName%></td>
                                    <td><%=num.role%></td>
                                    <td><%=num.email%></td>
                                    <td><img src="/uploads/admin/<%=num.image%>" alt="image" width="8%" class="rounded-circle"></td>
                                    <td><a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-user-edit/<%=num._id%>">Edit</td>
                                      <td><a class="btn btn-primary btn-user btn-block" href="/admin/admin-add-user-delete/<%=num._id%>">Delete</td>
                                </tr>
                                <%})%>
                              </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
            <!-- Content Row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include('layouts/siteFooter') %>
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </div>
</body>
<%- include('layouts/footer') %>
